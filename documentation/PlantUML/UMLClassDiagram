@startuml
left to right direction
title YompYomp UML Class Diagram - Architecture and Package View
package "App" {
  class Environment
}

package "Models" {
  class Trail
  class Hut
  class User
  class Location
  class LogTrail
  class LogHut
}

package "Service" {
  class SearchService
  class DataService
  class MapService
  class UserService
  class ValidationService
}

package "DataAccess (File-based)" {
  interface ITrail
  interface IHut
  interface IUser
  class FileBasedTrailRepo
  class FileBasedHutRepo
  class FileBasedUserRepo
}

package "Controllers (JavaFX GUI)" {
  class ScreenNavigator
  abstract class Controller
  class StartController
  class SetupProfileController
  class DashboardController
  class AllTrailsController
  class TripInfoController
}

'skinparam linetype ortho

'Controller relationships
Environment --> ScreenNavigator
ScreenNavigator ..> Controller

'Inheritence with the abstract controller class
Controller <|-- StartController
Controller <|-- SetupProfileController
Controller <|-- DashboardController
Controller <|-- AllTrailsController
Controller <|-- TripInfoController

DashboardController ..> DataService
AllTrailsController ..> SearchService
TripInfoController ..> DataService
SetupProfileController ..> UserService

DataService ..> ITrail
DataService ..> IHut
SearchService ..> ITrail
MapService ..> ITrail
MapService ..> IHut
UserService ..> IUser

ITrail <|.. FileBasedTrailRepo
IHut <|.. FileBasedHutRepo
IUser <|.. FileBasedUserRepo

UserService ..> User
SearchService ..> Location
ValidationService ..> LogHut
ValidationService ..> LogTrail

Trail -- Location
Hut -- Location
LogHut -- Hut
LogTrail -- User
LogHut -- User
LogTrail -- Trail
@enduml