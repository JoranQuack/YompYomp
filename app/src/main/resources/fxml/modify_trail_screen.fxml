<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox minHeight="-Infinity" minWidth="-Infinity" styleClass="root-pane" stylesheets="@../styles/global.css" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team5.gui.ModifyTrailController">
   <children>
      <VBox prefWidth="320.0" spacing="10.0">
         <children>
            <Label styleClass="heading" text="Basic Trail Information">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <HBox>
               <children>
                  <Label text="Trail name" />
                  <Label styleClass="text-red" text="*" />
               </children>
            </HBox>
            <TextField fx:id="trailNameTextField">
               <font>
                  <Font size="12.0" />
               </font>
            </TextField>
            <Label text="Te Reo translation" />
            <TextField fx:id="translationTextField">
               <font>
                  <Font size="12.0" />
               </font>
            </TextField>
            <HBox spacing="10.0">
               <children>
                  <VBox maxWidth="-Infinity" prefWidth="135.0" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Difficulty" />
                        <ComboBox fx:id="difficultyComboBox" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox maxWidth="-Infinity" prefWidth="135.0" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox>
                           <children>
                              <Label text="Trail type" />
                              <Label styleClass="text-red" text="*" />
                           </children>
                        </HBox>
                        <ComboBox fx:id="trailTypeComboBox" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label text="Completion time" />
            <TextField fx:id="completionTimeTextField" />
            <HBox>
               <children>
                  <Label text="Trail description" />
                  <Label styleClass="text-red" text="*" />
               </children>
            </HBox>
            <TextArea fx:id="trailDescriptionTextArea" maxHeight="1.7976931348623157E308" prefHeight="100.0" wrapText="true" VBox.vgrow="ALWAYS" />
            <Label text="Cultural URL" />
            <TextField fx:id="cultureUrlTextField" />
            <Button alignment="BOTTOM_CENTER" contentDisplay="TOP" mnemonicParsing="false" styleClass="bg-red" text="Delete Trail">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="20.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox fx:id="mapContainer" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <VBox alignment="TOP_CENTER" spacing="10.0">
                     <children>
                        <HBox alignment="TOP_CENTER">
                           <children>
                              <Label fx:id="latitudeLabel" text="Latitude" />
                              <Label styleClass="text-red" text="*" />
                           </children>
                        </HBox>
                        <TextField fx:id="latitudeTextField" />
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" spacing="10.0">
                     <children>
                        <HBox alignment="TOP_CENTER">
                           <children>
                              <Label fx:id="longitudeLabel" text="Longitude" />
                              <Label styleClass="text-red" text="*" />
                           </children>
                        </HBox>
                        <TextField fx:id="longitudeTextField" />
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" spacing="10.0">
                     <children>
                        <HBox alignment="TOP_CENTER">
                           <children>
                              <Label fx:id="latitudeLabel1" text="Region" />
                           </children>
                        </HBox>
                        <TextField fx:id="regionTextField" editable="false" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <VBox alignment="BOTTOM_CENTER" spacing="5.0">
                     <children>
                        <Label fx:id="invalidNumberLabel" styleClass="text-red" text="Label" wrapText="true" />
                        <Label fx:id="emptyFieldLabel" styleClass="text-red" text="Label" wrapText="true" />
                     </children>
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
                  <VBox alignment="BOTTOM_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" text="Save" />
                        <Button fx:id="backButton" mnemonicParsing="false" text="Back &amp; Discard Changes" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" right="20.0" top="20.0" />
         </padding>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
