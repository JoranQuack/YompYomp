<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="550.0" minWidth="800.0" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team5.gui.ViewTrailController">
   <children>
      <VBox maxHeight="1.7976931348623157E308" prefWidth="250.0" spacing="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" text="Back">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <ImageView fx:id="trailThumbnail" fitHeight="157.0" fitWidth="282.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ImageView>
            <HBox>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <VBox prefHeight="37.0" prefWidth="280.0">
                     <children>
                        <Label fx:id="trailNameLabel" text="Trail Name">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font>
                        </Label>
                        <Label fx:id="translationLabel" text="Translation">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <StackPane>
               <children>
                  <ProgressBar fx:id="matchBar" prefHeight="25.0" prefWidth="270.0" progress="0.0">
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin>
                  </ProgressBar>
                  <Label fx:id="matchLabel" style="-fx-font-size: 12px; -fx-text-fill: black; -fx-font-weight: bold;" text="0% Match">
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </StackPane>
            <Label fx:id="descriptionLabel" alignment="TOP_LEFT" text="Label" wrapText="true">
               <font>
                  <Font size="11.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="BOTTOM_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="editInfoButton" mnemonicParsing="false" text="Edit Info" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <HBox.margin>
            <Insets />
         </HBox.margin>
      </VBox>
      <VBox spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <ImageView fx:id="trailMap" fitHeight="253.0" fitWidth="479.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ImageView>
            <HBox>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Label text="Weather forecast coming soon..." />
               </children>
            </HBox>
            <Label disable="true" text="Relevant Huts" visible="false">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <HBox spacing="10.0" visible="false">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <children>
                        <ImageView fx:id="hutThumbnail1" fitHeight="80.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="hutName1" text="Hut" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                     <children>
                        <ImageView fx:id="hutThumbnail2" fitHeight="80.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" />
                        <Label fx:id="hutName2" text="Hut" />
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding></VBox>
   </children>
</HBox>
