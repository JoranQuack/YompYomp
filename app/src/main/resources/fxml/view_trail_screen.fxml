<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="400.0" minWidth="600.0" styleClass="root-pane" stylesheets="@../styles/global.css" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team5.gui.ViewTrailController">
   <children>
      <VBox prefWidth="200.0" spacing="20.0">
         <children>
            <HBox fx:id="trailCardHBox" />
            <VBox>
               <children>
                  <Hyperlink fx:id="docHutsLink" text="Hyperlink" />
                  <Hyperlink fx:id="remoteHutsLink" text="Hyperlink" />
               </children>
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
            <HBox alignment="BOTTOM_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="editInfoButton" mnemonicParsing="false" text="Edit Info" />
                  <Button fx:id="logTrailButton" mnemonicParsing="false" text="Log Trail" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
         </padding>
      </VBox>
      <VBox spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox fx:id="mapContainer" alignment="CENTER" VBox.vgrow="ALWAYS" />
            <FlowPane columnHalignment="CENTER" hgap="30.0" vgap="10.0">
               <children>
                  <CheckBox fx:id="nearbyTrailsCheckbox" mnemonicParsing="false" text="View nearby trails" wrapText="true" />
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <TextField fx:id="trailsRadiusTextField" maxWidth="80.0" />
                        <Label text="km" wrapText="true" />
                     </children>
                  </HBox>
                  <HBox fx:id="legendContainer" alignment="CENTER_LEFT" spacing="10.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" />
               </padding>
            </FlowPane>
            <HBox fx:id="weatherContainer" minHeight="175.0" spacing="10.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
         </padding></VBox>
   </children>
</HBox>
