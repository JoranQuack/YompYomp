<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team5.gui.ViewTrailController">
   <children>
      <VBox prefWidth="200.0" spacing="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" text="Back">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox fx:id="trailCardHBox" />
            <Label fx:id="translationLabel" text="Translation" />
            <Label fx:id="descriptionLabel" alignment="TOP_LEFT" text="Description" wrapText="true">
               <font>
                  <Font size="11.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <Hyperlink fx:id="culturalUrlHyperlink" text="Hyperlink">
               <font>
                  <Font size="11.0" />
               </font>
            </Hyperlink>
            <HBox alignment="BOTTOM_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="editInfoButton" mnemonicParsing="false" text="Edit Info" />
                  <Button fx:id="logTrailButton" mnemonicParsing="false" text="Log Trail" />
               </children>
            </HBox>
            <Hyperlink fx:id="docHutsLink" text="Hyperlink" />
            <Hyperlink fx:id="remoteHutsLink" text="Hyperlink" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
      <VBox spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox fx:id="mapContainer" prefHeight="243.0" prefWidth="464.0" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER_LEFT">
               <children>
                  <CheckBox fx:id="nearbyTrailsCheckbox" mnemonicParsing="false" text="View nearby trails" wrapText="true" />
                  <Region HBox.hgrow="ALWAYS" />
                  <TextField fx:id="trailsRadiusTextField" prefHeight="25.0" prefWidth="59.0" />
                  <Label prefHeight="25.0" prefWidth="40.0" text="km" wrapText="true" />
               </children>
            </HBox>
            <HBox fx:id="legendContainer" spacing="10.0" />
            <HBox>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Label fx:id="WeatherLabel" prefHeight="66.0" prefWidth="222.0" text="Current Weather data loading..." />
                  <VBox prefHeight="29.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="forecastLabel" alignment="CENTER_RIGHT" prefHeight="66.0" prefWidth="259.0" text="Forecast data loading..." />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding></VBox>
   </children>
</HBox>
