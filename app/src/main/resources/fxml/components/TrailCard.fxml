<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<!--
  Layout for TrailCard
  Only includes a thumbnail, title, and subtitle.
-->
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="seng202.team5.gui.components.TrailCard"
      spacing="8" alignment="CENTER_LEFT"
      style="-fx-padding: 12; -fx-background-radius: 8; -fx-background-color: white;">

    <!-- Thumbnail image -->
    <ImageView fx:id="thumbnail" fitWidth="200" fitHeight="120" preserveRatio="true"/>

    <!-- Title -->
    <Label fx:id="title" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Trail Name"/>

</VBox>
