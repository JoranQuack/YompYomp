<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" spacing="8" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- VBox padding -->
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Thumbnail image -->
    <ImageView fx:id="thumbnail" fitWidth="200" fitHeight="120" preserveRatio="true"/>

    <!-- Title -->
    <Label fx:id="title" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Trail Name"/>

    <!-- Match bar + label -->
    <HBox alignment="CENTER_LEFT" spacing="8">
        <ProgressBar fx:id="matchBar" prefWidth="150" progress="0.0" />
        <Label fx:id="matchLabel" style="-fx-font-size: 12px; -fx-text-fill: #333;" text="0% Match" />
    </HBox>

</fx:root>
