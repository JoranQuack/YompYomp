<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root prefWidth="230.0" spacing="8" stylesheets="@../../styles/global.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1">

    <!-- VBox padding -->
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <HBox fx:id="thumbnailContainer" prefHeight="120.0" VBox.vgrow="NEVER">
      <children>
      
          <!-- Thumbnail image -->
          <ImageView fx:id="thumbnail" fitHeight="126.0" fitWidth="218.0" preserveRatio="true">
            <image>
               <Image url="@../../images/Default%20Trail%20Image.png" />
            </image>
         </ImageView>
      </children>
   </HBox>

                      <!-- Title -->
    <Label fx:id="title" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Trail Name" />
   <Label fx:id="regionLabel" text="Region" />
   <FlowPane fx:id="attributesFlowPane" hgap="5.0" vgap="5.0">
      <children>
         <Label fx:id="difficultyLabel" text="Difficulty" />
         <Label fx:id="typeLabel" text="Type" />
         <Label fx:id="durationLabel" text="Duration" />
      </children>
   </FlowPane>

    <StackPane>
        <ProgressBar fx:id="matchBar" maxWidth="Infinity" progress="0.0" />
        <Label fx:id="matchLabel" styleClass="text-light" text="0% Match" />
    </StackPane>

</fx:root>
