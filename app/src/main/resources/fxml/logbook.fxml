<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="300.0" minWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team5.gui.LogBookController">
   <children>
      <!-- Search section -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <TextField fx:id="searchBarTextField" maxWidth="1.7976931348623157E308" onKeyTyped="#onSearchButtonClicked" promptText="Search trails..." HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearchButtonClicked" text="Search" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>

      <!-- Results and pagination -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="resultsLabel" prefWidth="150.0" text="Loading trails..." />
            <Region HBox.hgrow="ALWAYS" />
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" prefWidth="150.0" spacing="5.0">
               <children>
                  <Label text="Page:" />
                  <ChoiceBox fx:id="pageChoiceBox" prefWidth="60.0" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>

      <!-- Trails container -->
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <FlowPane fx:id="logContainer" alignment="CENTER" columnHalignment="CENTER" hgap="15.0" prefWrapLength="0.0" vgap="15.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>
   </children>
</VBox>
