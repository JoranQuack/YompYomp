<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" minHeight="350.0" minWidth="500.0" styleClass="root-pane-dark" stylesheets="@../styles/global.css" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team5.gui.ProfileQuizController">
   <children>
      <ImageView fx:id="bgImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/quiz_background.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER_LEFT" maxWidth="-Infinity" prefWidth="300.0" spacing="30.0" StackPane.alignment="CENTER">
         <children>
            <Region VBox.vgrow="ALWAYS" />
            <VBox alignment="CENTER">
               <children>
                  <Label text="Profile Setup Quiz">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <styleClass>
                        <String fx:value="text-light" />
                        <String fx:value="title" />
                     </styleClass>
                  </Label>
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label fx:id="questionLabel1" styleClass="text-light" text="Experience">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Slider fx:id="slider1" blockIncrement="1.0" majorTickUnit="1.0" max="5.0" min="1.0" minorTickCount="0" />
                  <HBox>
                     <children>
                        <Label fx:id="minLabel1" minWidth="80.0" text="Beginner">
                           <styleClass>
                              <String fx:value="small-text" />
                              <String fx:value="text-light" />
                           </styleClass>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="medLabel1" alignment="CENTER" minWidth="80.0" text="Intermediate" textAlignment="CENTER">
                           <styleClass>
                              <String fx:value="small-text" />
                              <String fx:value="text-light" />
                           </styleClass>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="maxLabel1" alignment="CENTER_RIGHT" minWidth="80.0" text="Expert" textAlignment="RIGHT">
                           <styleClass>
                              <String fx:value="small-text" />
                              <String fx:value="text-light" />
                           </styleClass>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label fx:id="questionLabel2" styleClass="text-light" text="Preferred gradient of tramp?">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Slider fx:id="slider2" />
                  <HBox>
                     <children>
                        <Label fx:id="minLabel2" minWidth="80.0" text="Gentle">
                           <styleClass>
                              <String fx:value="small-text" />
                              <String fx:value="text-light" />
                           </styleClass>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="medLabel2" alignment="CENTER" text="Moderate" textAlignment="CENTER">
                           <styleClass>
                              <String fx:value="small-text" />
                              <String fx:value="text-light" />
                           </styleClass>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="maxLabel2" alignment="CENTER_RIGHT" minWidth="80.0" text="Steep" textAlignment="RIGHT">
                           <styleClass>
                              <String fx:value="small-text" />
                              <String fx:value="text-light" />
                           </styleClass>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button fx:id="continueButton" mnemonicParsing="false" text="Continue" />
                        <Button fx:id="skipQuizButton" mnemonicParsing="false" text="Skip Quiz" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
            <ProgressBar fx:id="quizProgressBar" prefHeight="20.0" prefWidth="400.0" progress="0.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ProgressBar>
         </children>
         <padding>
            <Insets bottom="20.0" top="70.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
