<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootStackPane" minHeight="350.0" minWidth="500.0" styleClass="root-pane-dark" stylesheets="@../styles/global.css" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team5.gui.WelcomeController">
   <children>
      <ImageView fx:id="bgImage" fitHeight="350.0" fitWidth="500.0" pickOnBounds="true">
         <image>
            <Image url="@../images/welcome_background.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="15.0">
         <children>
            <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/YompYompIcon.png" />
               </image>
            </ImageView>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label fx:id="titleLabel" text="Kia Ora!">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <styleClass>
                        <String fx:value="title" />
                        <String fx:value="text-light" />
                     </styleClass>
                  </Label>
                  <Label fx:id="subtitleLabel" styleClass="text-light" text="Set up your profile for a tailored experience, or simply skip for now!" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="setUpProfileButton" mnemonicParsing="false" onAction="#onSetUpProfileButtonClicked" text="Set Up Profile">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Button>
                  <Button fx:id="skipButton" mnemonicParsing="false" onAction="#onSkipButtonClicked" text="Skip">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
