<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team5.gui.TrailsController">
   <children>
      <!-- Search section -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <TextField fx:id="searchBarTextField" promptText="Search trails..." prefWidth="300.0" />
            <Button fx:id="searchButton" onAction="#onSearchButtonClickedOrPageSelected" text="Search" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>

      <!-- Results and pagination -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="resultsLabel" text="Loading trails..." />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Page:" />
            <ChoiceBox fx:id="pageChoiceBox" prefWidth="60.0" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>

      <!-- Trails container -->
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <FlowPane fx:id="trailsContainer" hgap="15.0" vgap="15.0" prefWrapLength="0.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>
   </children>
</VBox>
